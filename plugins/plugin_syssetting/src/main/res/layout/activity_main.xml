<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:orientation="horizontal">
  <ScrollView
    android:layout_width="0dp"
    android:layout_height="match_parent"
    android:layout_weight="1">
    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:orientation="vertical">
      <Button
        android:id="@+id/btn_clean_log"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:textAppearanceSmall"
        android:text="@string/clean_log"/>

      <Button
        android:id="@+id/btn_issues_cert"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:textAppearanceSmall"
        android:enabled="false"
        android:text="@string/issues_cert"/>

      <Button
        android:id="@+id/btn_start_proxy"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:textAppearanceSmall"
        android:enabled="false"
        android:text="@string/start_proxy"/>

      <Button
        android:id="@+id/btn_access_application"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:textAppearanceSmall"
        android:enabled="false"
        android:text="@string/access_application"/>

      <Button
        android:id="@+id/btn_stop_proxy"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:textAppearanceSmall"
        android:enabled="false"
        android:text="@string/stop_proxy"/>

      <Button
        android:id="@+id/btn_revoke_cert"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:textAppearanceSmall"
        android:enabled="false"
        android:text="@string/revoke_cert"/>
    </LinearLayout>
  </ScrollView>

  <ScrollView
    android:layout_width="0dp"
    android:layout_height="match_parent"
    android:layout_weight="1">
    <TextView
      android:id="@+id/tv_log"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"/>
  </ScrollView>
</LinearLayout>
